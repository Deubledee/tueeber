{
  "entrypoint": "views/index.html",
  "shell": "src/my-app.html",
  "fragments": [
    "src/my-view1.html",
    "src/my-view2.html",
    "src/my-view3.html",
    "src/my-view404.html"
  ],
  "sources": [
    "src/**/*",
    "public/images/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "public/bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": [
      "polymer-2"
    ]
  },
  "builds": [   
    {
      "name": "build/fallback",
      "js": {
        "minify": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      }
    },
    {
      "name": "build/modern",
      "bundle": {        
        "stripComments": true,
        "inlineCss": false,
        "sourcemaps": true
      },
      "js": {
        "minify": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      }
    }
  ]
}