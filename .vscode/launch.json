{
    "version": "0.2.0",
    "configurations": [       
       {
           "type": "node",
           "request": "launch",
           "name": "startNode",
           "program": "${workspaceFolder}/bin/www"
       },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "startPrpl",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "startPrpl"
            ],
            "port": 9229
        }
    ]
}